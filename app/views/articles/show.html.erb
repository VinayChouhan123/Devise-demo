<%= image_tag @article.image.url, style: "height:30%; width:30%;" %>
<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<p><%= @article.status %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: { method: :delete, confirm: "Are you sure?" } %></li>
</ul>
